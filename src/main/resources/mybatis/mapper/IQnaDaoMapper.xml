<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team4.artgallery.dao.IQnaDao">

    <insert id="insert" parameterType="com.team4.artgallery.dto.QnaDto" useGeneratedKeys="true" keyProperty="qseq">
        INSERT INTO qna (title, content, email, phone, publicyn, pwd)
        VALUES (#{title}, #{content}, #{email}, #{phone}, #{publicyn}, #{pwd})
    </insert>

    <select id="get" parameterType="int" resultType="com.team4.artgallery.dto.QnaDto">
        SELECT *
        FROM qna
        WHERE qseq = #{qseq}
    </select>

    <select id="getAll" parameterType="com.team4.artgallery.util.Pagination"
            resultType="com.team4.artgallery.dto.QnaDto">
        SELECT *
        FROM qna
        ORDER BY qseq DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="getAllCount" resultType="int">
        SELECT COUNT(*)
        FROM qna
    </select>

    <update id="update" parameterType="com.team4.artgallery.dto.QnaDto">
        UPDATE qna
        SET title    = #{title},
            content  = #{content},
            email    = #{email},
            phone    = #{phone},
            publicyn = #{publicyn},
            pwd      = #{pwd}
        WHERE qseq = #{qseq}
    </update>

    <update id="reply">
        UPDATE qna
        SET reply = #{reply}
        WHERE qseq = #{qseq}
    </update>

    <delete id="delete" parameterType="int">
        DELETE
        FROM qna
        WHERE qseq = #{qseq}
    </delete>

</mapper>