<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team4.artgallery.dao.IGalleryDao">
    <sql id="where-filter">
        <if test="filter">
            <where>
                <if test="filter.keyword != null and filter.keyword != ''">
                    OR author_name LIKE CONCAT('%', #{filter.keyword}, '%')
                    OR author_id LIKE CONCAT('%', #{filter.keyword}, '%')
                    OR title LIKE CONCAT('%', #{filter.keyword}, '%')
                    OR content LIKE CONCAT('%', #{filter.keyword}, '%')
                </if>
            </where>
        </if>
    </sql>

    <insert id="createGallery" parameterType="GalleryDto" useGeneratedKeys="true" keyProperty="gseq">
        INSERT INTO gallery (author, title, content, image, savefilename)
        VALUES (#{authorId}, #{title}, #{content}, #{image}, #{savefilename})
    </insert>

    <select id="getGallery" parameterType="int" resultType="GalleryDto">
        SELECT *
        FROM gallery_view
        WHERE gseq = #{gseq}
    </select>

    <select id="getGalleries" resultType="GalleryDto">
        SELECT *
        FROM gallery_view
        <include refid="where-filter"/>
        LIMIT #{pagination.limit} OFFSET #{pagination.offset}
    </select>

    <select id="countGalleries" resultType="Integer">
        SELECT COUNT(*)
        FROM gallery_view
        <include refid="where-filter"/>
    </select>

    <update id="updateGallery" parameterType="GalleryDto">
        UPDATE gallery
        SET author       = #{author},
            title        = #{title},
            content      = #{content},
            image        = #{image},
            savefilename = #{savefilename}
        WHERE gseq = #{gseq}
    </update>

    <update id="increaseReadCount" parameterType="int">
        UPDATE gallery
        SET readcount = readcount + 1
        WHERE gseq = #{gseq}
    </update>

    <delete id="deleteGallery" parameterType="int">
        DELETE
        FROM gallery
        WHERE gseq = #{gseq}
    </delete>

</mapper>